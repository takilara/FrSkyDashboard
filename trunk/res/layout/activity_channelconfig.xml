    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:scrollbars="vertical">
        <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/scrollView1">
            <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chConf_SourceChannel" />

                <Spinner
                    android:id="@+id/chConf_spSourceChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="@string/chConf_Description"></TextView>
                <EditText android:text="EditText" android:layout_width="match_parent" android:id="@+id/chConf_edDescription" android:layout_height="wrap_content"></EditText>
                <TextView android:text="@string/chConf_Unit" android:layout_width="wrap_content" android:id="@+id/textView3" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_width="match_parent" android:id="@+id/chConf_edUnit" android:text="EditText" android:layout_height="wrap_content"></EditText>
                <TextView android:layout_width="wrap_content" android:id="@+id/textView3" android:layout_height="wrap_content" android:text="@string/chConf_shortUnit"></TextView>
                <EditText android:layout_width="match_parent" android:id="@+id/chConf_edShortUnit"  android:layout_height="wrap_content" android:text="EditText"></EditText>
                <TextView android:text="@string/chConf_Offset" android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_width="match_parent" android:inputType="numberDecimal|numberSigned" android:id="@+id/chConf_edOffset" android:text="EditText" android:layout_height="wrap_content"></EditText>
                <LinearLayout android:orientation="horizontal" android:id="@+id/llOffset" android:layout_height="wrap_content" android:layout_width="match_parent">
                	<Button android:text="@string/chConf_CalibOffset" android:layout_width="wrap_content" android:id="@+id/chConf_btnCalibOffset" android:layout_height="wrap_content" android:layout_weight="1"></Button>
                	<Button android:text="@string/chConf_CalibOffsetDefault" android:layout_width="wrap_content" android:id="@+id/chConf_btnCalibOffsetDefault" android:layout_height="wrap_content" android:layout_weight="0.5"></Button>
                </LinearLayout>
                <TextView android:text="@string/chConf_Factor" android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_width="match_parent" android:inputType="numberDecimal|numberSigned" android:id="@+id/chConf_edFactor" android:text="EditText" android:layout_height="wrap_content"></EditText>
				<LinearLayout android:orientation="horizontal" android:id="@+id/llFactor" android:layout_height="wrap_content" android:layout_width="match_parent">
                	<Button android:text="@string/chConf_CalibFactor" android:layout_width="wrap_content" android:id="@+id/chConf_btnCalibFactor" android:layout_height="wrap_content" android:layout_weight="1"></Button>
                	<Button android:text="@string/chConf_CalibFactorDefault" android:layout_width="wrap_content" android:id="@+id/chConf_btnCalibFactorDefault" android:layout_height="wrap_content" android:layout_weight="0.5"></Button>
                </LinearLayout>
                <TextView android:text="@string/chConf_Precision" android:layout_width="wrap_content" android:id="@+id/textView5" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_width="match_parent" android:inputType="number" android:id="@+id/chConf_edPrecision" android:text="EditText" android:layout_height="wrap_content"></EditText>
                <TextView android:text="@string/chConf_MovingAverage" android:layout_width="wrap_content" android:id="@+id/textView6" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_width="match_parent" android:inputType="number" android:id="@+id/chConf_edMovingAverage" android:text="EditText" android:layout_height="wrap_content"></EditText>
                <CheckBox android:text="@string/chConf_SpeechEnabled" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/chConf_chkSpeechEnabled"></CheckBox>
                 
                
                <Button android:text="@string/save" android:layout_width="match_parent" android:id="@+id/chConf_btnSave" android:layout_height="wrap_content"></Button>
                
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
