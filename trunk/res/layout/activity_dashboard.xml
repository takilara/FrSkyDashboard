<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llDashboardOutside"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

<ScrollView 
	    android:id="@+id/ScrollViewDashboard"
		android:layout_width="match_parent"
		android:layout_gravity="top"
		android:gravity="top" 
		android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/llDashboardFull"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:orientation="vertical">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/llDashboardHeader"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" android:orientation="vertical">
    
	    <LinearLayout
	        android:id="@+id/llDashboardHeaderLine1"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/dash_tvConnBt"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#00aa00"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="BT: DOWN" />
	
	        <TextView
	            android:id="@+id/dash_tvConnTx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#00aa00"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="Tx: DOWN" />
	
	        <TextView
	            android:id="@+id/dash_tvConnRx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#ff0000"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="Rx: DOWN" />
	    </LinearLayout>
	    
		
	    <LinearLayout
	        android:id="@+id/llDashboardHeaderLine2"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/dash_tvRSSItx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="RSSItx: -1" />
	
	        <TextView
	            android:id="@+id/dash_tvRSSIrx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="RSSIrx: -1" />
	
	        <TextView
	            android:id="@+id/dash_tvFps"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="FPS: 0" />
	    </LinearLayout>
	
	    <View
	        	android:layout_height="2dip"
	        	android:layout_width="match_parent"
	        	android:background="#FF909090" />
	   
	     <LinearLayout
	         android:id="@+id/llDashboardHeaderLine3"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal" >

	         <ImageButton
	             android:id="@+id/dash_btnConfigCurrentModel"
	             android:layout_width="40dp"
	             android:layout_height="40dp"
	             android:scaleType="centerCrop"
	             android:layout_gravity="center_vertical"
	             android:layout_margin="0dp"
	             android:src="@android:drawable/ic_menu_edit" />

	         

	         <TextView
	             android:id="@+id/dash_tvModelName"
	             android:layout_width="0dp"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:gravity="center"
	             android:text="Model 1"
	             android:textColor="#ffffff"
	             android:textSize="35sp" />
	         
	         <ImageButton
	             android:id="@+id/dash_btnConfigCurrentModelsAlarms"
	             android:layout_width="40dp"
	             android:layout_height="40dp"
	              android:layout_gravity="center_vertical"
	              android:layout_margin="0dp"
	             android:src="@android:drawable/ic_lock_idle_alarm"
	             android:tint="#ff848484" />

	     </LinearLayout>
	    
	    <View
	        	android:layout_height="2dip"
	        	android:layout_width="match_parent"
	        	android:background="#FF909090" />
    </LinearLayout>
    

		<LinearLayout
		    android:id="@+id/llDashboardChannels"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		   

		        <TextView
		            android:id="@+id/dash_ch0NameDesc"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView" >
		        </TextView>

		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:orientation="horizontal" >

		             <Button
		                 android:id="@+id/dash_btnEditChannel0"
		                 android:layout_width="40dp"
		                 android:layout_height="40dp"
		                 android:layout_gravity="center_vertical"
		                 android:layout_margin="0dp"
		                 android:drawablePadding="0dp"
		                 android:includeFontPadding="false"
		                 android:padding="0dp"
		                 android:text="..."
		                 android:textSize="10sp" />

		             <LinearLayout
		                 android:layout_width="0dp"
		                 android:layout_height="wrap_content"
		                 android:layout_gravity="center_horizontal"
		                 android:gravity="center_horizontal"
		                 android:layout_weight="1"
		                 android:orientation="horizontal" >

		                 <TextView
		                     android:id="@+id/ad1Value"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:gravity="right"
		                     android:padding="0dp"
		                     android:text="0"
		                     android:textSize="35sp" />

		                 <TextView
		                     android:id="@+id/ad1Unit"
		                     android:layout_width="wrap_content"
		                     android:layout_height="wrap_content"
		                     android:layout_marginLeft="10dip"
		                     android:layout_marginRight="10dip"
		                     android:gravity="left"
		                     android:text="V"
		                     android:textSize="20sp" />
		             </LinearLayout>

		             <ImageView
		                 android:id="@+id/imageView1"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:layout_weight="0"
		                 android:src="@android:drawable/ic_lock_silent_mode" />
		         </LinearLayout>

		        <View
		            android:layout_height="2dip"
		            android:layout_width="match_parent"
		            android:background="#FF909090" />

		        <TextView
		            android:id="@+id/dash_ch1NameDesc"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="TextView" >
		        </TextView>

		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >

		            <Button
		                android:id="@+id/dash_btnEditChannel1"
		                android:layout_width="40dp"
		                android:layout_height="40dp"
		                android:layout_gravity="center_vertical"
		                android:layout_margin="0dp"
		                android:drawablePadding="0dp"
		                android:includeFontPadding="false"
		                android:padding="0dp"
		                android:text="..."
		                android:textSize="10sp" />

		        	<LinearLayout
		                 android:layout_width="0dp"
		                 android:layout_height="wrap_content"
		                 android:layout_gravity="center_horizontal"
		                 android:layout_weight="1"
		                 android:orientation="horizontal" >
		            
			            <TextView
		                     android:id="@+id/ad2Value"
		                     android:layout_width="0dp"
		                     android:layout_height="wrap_content"
		                     android:layout_weight="1"
		                     android:gravity="right"
		                     android:padding="0dp"
		                     android:text="0"
		                     android:textSize="35sp" />

		                 <TextView
		                     android:id="@+id/ad2Unit"
		                     android:layout_width="0dp"
		                     android:layout_height="wrap_content"
		                     android:layout_marginLeft="10dip"
		                     android:layout_marginRight="10dip"
		                     android:layout_weight="1"
		                     android:gravity="left"
		                     android:text="V"
		                     android:textSize="20sp" />
		        	</LinearLayout>
		        	<ImageView
		                 android:id="@+id/imageView1"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:src="@android:drawable/ic_lock_silent_mode_off" />
		        </LinearLayout>

		        <View
		            android:layout_height="2dip"
		            android:layout_width="match_parent"
		            android:background="#FF909090" />


		    
		</LinearLayout>

    

		    <LinearLayout
		        android:id="@+id/llDashboardFooter"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" >
		
		        
		
		        <ToggleButton
		            android:id="@+id/dash_tglSpeak"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:text="ToggleButton"
		            android:textOff="Cyclic Speaker Off"
		            android:textOn="Cyclic Speaker On" />
	
	    	</LinearLayout>
    	
		</LinearLayout>
	</ScrollView>  
</LinearLayout>
