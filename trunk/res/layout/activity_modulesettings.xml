	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
	
	<ScrollView 
	    android:id="@+id/ScrollViewFrSkyModuleSettings"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout 
	        android:id="@+id/linearLayoutFrSkyModuleSettingsContainer"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
		    <LinearLayout 
		        android:id="@+id/linearLayoutFrSkyModuleSettings"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical">

	        <TextView
	            android:id="@+id/tv_FrSkySettings_modelName"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:textStyle="bold"
	            android:text="TextView" />
        
        </LinearLayout>
        
        <Button
            android:id="@+id/FrSkySettings_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_weight="1"
            android:enabled="true"
            android:text="@string/FrSkySettings_Save"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/FrSkySettings_btnGetFromModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="true"
            android:text="@string/FrSkySettings_GetFromModule" />
        
        
         <Button
             android:id="@+id/FrSkySettings_send"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:enabled="false"
             android:text="@string/FrSkySettings_SendAll" />
           
    </LinearLayout>
    </ScrollView>
</LinearLayout>