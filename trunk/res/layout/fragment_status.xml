<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
	        android:id="@+id/llDashboardHeaderLine1"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/fs_tvConnBt"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#ff0000"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="BT: DOWN" />
	
	        <TextView
	            android:id="@+id/fs_tvConnTx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#ff0000"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="Tx: DOWN" />
	
	        <TextView
	            android:id="@+id/fs_tvConnRx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:background="#ff0000"
	            android:textColor="#000000"
	            android:textStyle="bold"
	            android:layout_margin="1dip"
	            android:text="Rx: DOWN" />
	    </LinearLayout>
	    
	
	
	    <LinearLayout
	        android:id="@+id/llDashboardHeaderLine2"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/fs_tvRSSItx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="RSSItx: -1" />
	
	        <TextView
	            android:id="@+id/fs_tvRSSIrx"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="RSSIrx: -1" />
	
	        <TextView
	            android:id="@+id/fs_tvFps"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="FPS: 0" />


	        <TextView
	            android:id="@+id/fs_tvBad"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Bad: 0" />

	    </LinearLayout>
	
	    <View
	        	android:layout_height="2dip"
	        	android:layout_width="match_parent"
	        	android:background="#FF909090" />
	   

	     <LinearLayout
	         android:id="@+id/llDashboardHeaderLine3"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:orientation="horizontal" >

	         <ImageButton
	             android:id="@+id/dash_btnConfigCurrentModel"
	             android:layout_width="40dp"
	             android:layout_height="40dp"
	             android:scaleType="centerCrop"
	             android:layout_gravity="center_vertical"
	             android:layout_margin="0dp"
	             android:src="@drawable/ic_menu_edit" />





	         

	         <TextView
	             android:id="@+id/fs_tvModelName"
	             android:layout_width="0dp"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:gravity="center"
	             android:text="Model 1"
	             android:textColor="#ffffff"
	             android:textSize="35sp" />
	         <!-- 
	         <ImageButton
	             android:id="@+id/dash_btnConfigCurrentModelsAlarms"
	             android:layout_width="40dp"
	             android:layout_height="40dp"
	              android:layout_gravity="center_vertical"
	              android:layout_margin="0dp"
	              android:scaleType="centerCrop"
	             android:src="@drawable/ic_popup_reminder"
	             android:tint="#ff848484" /> -->

	     </LinearLayout>
	     <View
	        	android:layout_height="2dip"
	        	android:layout_width="match_parent"
	        	android:background="#FF909090" />
    
    
</LinearLayout>
